{{#foreach posts}}
  {{#if @odd}}
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <div class="row">
          <div class="col-md-12">
            <h2><a href="{{url}}">{{title}}</a></h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            {{excerpt words="24"}}
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            {{#if author.image}}<img src="{{author.image}}" alt="{{author.name}}" />{{/if}}
            <a href="{{author.url}}">{{author.name}}</a>
            {{tags prefix=" on "}}
            <time class="post-date" datetime="{{date timeago="true"}}">{{date timeago="true"}}</time>
          </div>
        </div>
      </div>
  {{else}}
      <div class="col-md-6 col-sm-12">
        <div class="row">
          <div class="col-md-12">
            <h2><a href="{{url}}">{{title}}</a></h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            {{excerpt words="24"}}
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            {{#if author.image}}<img src="{{author.image}}" alt="{{author.name}}" />{{/if}}
            <a href="{{author.url}}">{{author.name}}</a>
            {{tags prefix=" on "}}
            <time class="post-date" datetime="{{date timeago="true"}}">{{date timeago="true"}}</time>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{/foreach}}
