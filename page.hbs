{{!< default}}

{{#post}}
  <div class="row">
    <div class="col-md-12">
      {{#if cover}}
        <div class="page-header" style="background-image: {{image}}">
      {{else}}
        <div class="page-header" style="background-color: #000000">
      {{/if}}
          <div class="page-header-inner">
            <h1>{{title}}</h1>
          </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{content}}
    </div>
  </div>
{{/post}}
