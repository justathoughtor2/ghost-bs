{{!< default}}

{{#post}}
  <div class="row">
    <div class="col-md-12">
      {{#if cover}}
        <div class="page-headerish" style="background-image: url('{{cover absolute="true"}}')">
      {{else}}
        <div class="page-headerish">
      {{/if}}
          <div class="page-header-inner">
            <h1>{{title}}</h1>
          </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{content}}
    </div>
  </div>
{{/post}}
