{{#post}}
  <div class="row">
    <div class="col-md-12">
      <h1>{{title}}</h1>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> 
      {{tags prefix=" on "}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{content}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{author}}
    </div>
  </div>
{{/post}}
